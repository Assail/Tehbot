<?xml version="1.0" encoding="UTF-8"?>
<ISUI>
	<template name='Information.Font'>
		<Name>Segoe</Name>
		<Size>24</Size>
		<Color>FFFFFFFF</Color>
	</template>

	<window name='Tehbot_FightOrFlight'>
		<Visible>1</Visible>
		<BackGroundColor></BackGroundColor>
		<Border>0</Border>
		<X>200</X>
		<Y>300</Y>
		<Width>1600</Width>
		<Height>1200</Height>
		<TitleBar>
			<Width>100%</Width>
			<Height>40</Height>
			<Border>0</Border>
			<BackgroundColor>FF000000</BackgroundColor>
			<Children>
				<Text name='Tehbot_FightOrFlight_TitleBar_Title'>
					<X>0</X>
					<Y>3</Y>
					<Width>100%</Width>
					<Height>40</Height>
					<Alignment>Center</Alignment>
					<Text>FightOrFlight Configuration</Text>
				</Text>
				<button	Name='Close'>
					<X>r80</X>
					<Y>0</Y>
					<Width>80</Width>
					<Height>40</Height>
					<Text>Close</Text>
					<OnLeftClick>
						ui -unload "&filepath;/FightOrFlight"
					</OnLeftClick>
				</button>
			</Children>
		</TitleBar>
		<Children name="Tehbot_FightOrFlight_Children">
			<Frame name="Tehbot_FightOrFlight_Frame">
				<X>0</X>
				<Y>30</Y>
				<Width>100%</Width>
				<Height>100%</Height>
				<BackgroundColor>FF000000</BackgroundColor>
				<Border>1</Border>
				<BorderColor>FFFFFFFF</BorderColor>
				<Children name="Tehbot_FightOrFlight_Frame_Children">
					<Text name='obj_GridWatcherInformation'>
						<Font template='Information.Font' />
						<X>1%</X>
						<Y>1%</Y>
						<Width>98%</Width>
						<Height>18%</Height>
						<Wrap />
						<Text>FightOrFlight is a MiniMode to detect and respond to threats. Fleeing is prefered but it will fight gankers when there is no choice.</Text>
					</Text>

					<Text name='LogLevelLabel'>
						<X>1%</X>
						<Y>7%</Y>
						<Width>30%</Width>
						<Height>3%</Height>
						<Text>Log level: 0 - DEBUG, 1 - INFO, ... 4 - NONE</Text>
					</Text>
					<Slider name='LogLevel'>
						<X>1%</X>
						<Y>11%</Y>
						<Width>20%</Width>
						<Height>3%</Height>
						<Border>1</Border>
						<Range>3</Range>
						<OnLoad>
							This:SetValue[${Script[Tehbot].VariableScope.FightOrFlight.FoFConfig.LogLevelBar:Dec}]
						</OnLoad>
						<OnChange>
							Script[Tehbot].VariableScope.FightOrFlight.FoFConfig:SetLogLevelBar[${This.Value:Inc}]
						</OnChange>
					</Slider>

					<Text name='FleeShieldThresholdText'>
						<X>1%</X>
						<Y>17%</Y>
						<Width>40%</Width>
						<Height>3%</Height>
						<Text>Flee if shields drop below ${Script[Tehbot].VariableScope.FightOrFlight.FoFConfig.FleeShieldThreshold}%</Text>
					</Text>
					<Slider name='FleeShieldThreshold'>
						<X>41%</X>
						<Y>17%</Y>
						<Width>30%</Width>
						<Height>4%</Height>
						<Border>1</Border>
						<OnLoad>
							This:SetValue[${Script[Tehbot].VariableScope.FightOrFlight.FoFConfig.FleeShieldThreshold}]
						</OnLoad>
						<OnChange>
							Script[Tehbot].VariableScope.FightOrFlight.FoFConfig:SetFleeShieldThreshold[${This.Value}]
						</OnChange>
					</Slider>

					<Text name='FleeArmorThresholdText'>
						<X>1%</X>
						<Y>25%</Y>
						<Width>40%</Width>
						<Height>3%</Height>
						<Text>Flee if armor drop below ${Script[Tehbot].VariableScope.FightOrFlight.FoFConfig.FleeArmorThreshold}%</Text>
					</Text>
					<Slider name='FleeArmorThreshold'>
						<X>41%</X>
						<Y>25%</Y>
						<Width>30%</Width>
						<Height>4%</Height>
						<Border>1</Border>
						<OnLoad>
							This:SetValue[${Script[Tehbot].VariableScope.FightOrFlight.FoFConfig.FleeArmorThreshold}]
						</OnLoad>
						<OnChange>
							Script[Tehbot].VariableScope.FightOrFlight.FoFConfig:SetFleeArmorThreshold[${This.Value}]
						</OnChange>
					</Slider>

					<Text name='FleeHullThresholdText'>
						<X>1%</X>
						<Y>33%</Y>
						<Width>40%</Width>
						<Height>3%</Height>
						<Text>Flee if hull drop below ${Script[Tehbot].VariableScope.FightOrFlight.FoFConfig.FleeHullThreshold}%</Text>
					</Text>
					<Slider name='FleeHullThreshold'>
						<X>41%</X>
						<Y>33%</Y>
						<Width>30%</Width>
						<Height>4%</Height>
						<Border>1</Border>
						<OnLoad>
							This:SetValue[${Script[Tehbot].VariableScope.FightOrFlight.FoFConfig.FleeHullThreshold}]
						</OnLoad>
						<OnChange>
							Script[Tehbot].VariableScope.FightOrFlight.FoFConfig:SetFleeHullThreshold[${This.Value}]
						</OnChange>
					</Slider>

					<Text name='FleeCapacitorThresholdText'>
						<X>1%</X>
						<Y>41%</Y>
						<Width>40%</Width>
						<Height>3%</Height>
						<Text>Flee if capacitor drop below ${Script[Tehbot].VariableScope.FightOrFlight.FoFConfig.FleeCapacitorThreshold}%</Text>
					</Text>
					<Slider name='FleeCapacitorThreshold'>
						<X>41%</X>
						<Y>41%</Y>
						<Width>30%</Width>
						<Height>4%</Height>
						<Border>1</Border>
						<OnLoad>
							This:SetValue[${Script[Tehbot].VariableScope.FightOrFlight.FoFConfig.FleeCapacitorThreshold}]
						</OnLoad>
						<OnChange>
							Script[Tehbot].VariableScope.FightOrFlight.FoFConfig:SetFleeCapacitorThreshold[${This.Value}]
						</OnChange>
					</Slider>

					<Text name='FleeLocalRedThresholdText'>
						<X>1%</X>
						<Y>49%</Y>
						<Width>50%</Width>
						<Height>3%</Height>
						<Text>Flee and stay in station if local has ${Script[Tehbot].VariableScope.FightOrFlight.FoFConfig.FleeLocalRedThreshold} pilots with bad standing.</Text>
					</Text>
					<Slider name='FleeLocalRedThreshold'>
						<X>41%</X>
						<Y>49%</Y>
						<Width>30%</Width>
						<Height>4%</Height>
						<Border>1</Border>
						<Range>20</Range>
						<OnLoad>
							This:SetValue[${Script[Tehbot].VariableScope.FightOrFlight.FoFConfig.FleeLocalRedThreshold}]
						</OnLoad>
						<OnChange>
							Script[Tehbot].VariableScope.FightOrFlight.FoFConfig:SetFleeLocalRedThreshold[${This.Value}]
						</OnChange>
					</Slider>

				</Children>
			</Frame>
		</Children>
	</window>

</ISUI>
